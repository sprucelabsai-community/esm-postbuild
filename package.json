{
  "name": "@sprucelabs/esm-postbuild",
  "version": "1.0.300",
  "description": "Script to do thins after build of esm modules",
  "main": "build/esm-postbuild.js",
  "repository": "git@github.com:sprucelabsai/esm-postbuild.git",
  "author": "Spruce Labs",
  "license": "MIT",
  "skill": {
    "namespace": "esm-postbuild",
    "upgradeIgnoreList": [
      "chalk",
      "globby",
      "@sprucelabs/resolve-path-aliases",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "bin": {
    "esm-postbuild": "./build/esm-postbuild.js"
  },
  "files": [
    "build/esm-postbuild.js"
  ],
  "scripts": {
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.ci": "npm run build.tsc",
    "build.dev": "npm run clean && npm run build.tsc --sourceMap",
    "build.resolve-paths": "true",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "esm-postbuild": "esm-postbuild",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint | true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.tsc": "tsc -w",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "globby": "^11.0.4",
    "yargs": "^17.3.0"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^6.0.275",
    "@sprucelabs/jest-sheets-reporter": "^1.2.275",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.257",
    "@sprucelabs/test-utils": "^3.0.318",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^16.11.12",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.4.1",
    "eslint-config-spruce": "^10.11.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.4",
    "jest-circus": "^27.4.4",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.3",
    "yarn-upgrade-all": "^0.5.4"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 120000,
    "reporters": [
      "default",
      [
        "@sprucelabs/jest-sheets-reporter",
        {
          "sheetId": "1DoWM7mYgGDa-PJXptLomrZmbIBZiuxS1YiAsRXU2Gm0",
          "worksheetId": 843037832,
          "testMap": {
            "canRunfromCommandLine": "I31"
          }
        }
      ]
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
