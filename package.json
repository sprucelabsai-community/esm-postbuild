{
  "name": "@sprucelabs/esm-postbuild",
  "version": "6.0.7",
  "description": "Script to do thins after build of esm modules",
  "main": "build/esm-postbuild.js",
  "repository": "git@github.com:sprucelabsai-community/esm-postbuild.git",
  "author": "Spruce Labs",
  "license": "MIT",
  "skill": {
    "namespace": "esm-postbuild",
    "upgradeIgnoreList": [
      "@sprucelabs/resolve-path-aliases",
      "@sprucelabs/spruce-test-fixtures",
      "@sprucelabs/test-utils",
      "@sprucelabs/jest-json-reporter",
      "chalk"
    ]
  },
  "bin": {
    "esm-postbuild": "./build/esm-postbuild.js"
  },
  "files": [
    "build/esm-postbuild.js"
  ],
  "scripts": {
    "build.ci": "npm run build.tsc && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "npm run clean && npm run build.tsc --sourceMap",
    "build.dist": "npm run clean && npm run build.tsc",
    "build.resolve-paths": "true",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "esm-postbuild": "esm-postbuild",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "release": "semantic-release",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint | true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.lint": "concurrently 'yarn run lint' \"chokidar 'src/**/*' -c 'yarn run lint.tsc'\"",
    "watch.tsc": "tsc -w",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev"
  },
  "dependencies": {
    "@sprucelabs/globby": "^2.0.6",
    "chalk": "^4.1.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@sprucelabs/semantic-release": "^5.0.1",
    "@sprucelabs/test": "^9.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.1.1",
    "eslint-config-spruce": "^11.2.12",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
